<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
            android:text="Calculator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/calculator" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="136dp"
            android:layout_marginStart="136dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="135dp" android:layout_marginRight="135dp" android:layout_marginTop="33dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="SharedPreferences"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sharedpreferences" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="136dp"
            android:layout_marginStart="136dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="135dp" android:layout_marginRight="135dp" android:layout_marginTop="30dp"
            app:layout_constraintHorizontal_bias="0.518" app:layout_constraintTop_toBottomOf="@+id/calculator"/>
    <Button
            android:text="ListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listview" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="136dp"
            android:layout_marginStart="136dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="135dp" android:layout_marginRight="135dp" android:layout_marginTop="30dp"
            app:layout_constraintHorizontal_bias="0.518" app:layout_constraintTop_toBottomOf="@+id/sharedpreferences"
            />
    <Button
            android:text="worldclock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/worldclock" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/listview"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="30dp"/>
</android.support.constraint.ConstraintLayout>